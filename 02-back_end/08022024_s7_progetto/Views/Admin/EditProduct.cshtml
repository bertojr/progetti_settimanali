@model _08022024_s7_progetto.DataModels.Product

@{
    ViewData["Title"] = "Modifica Prodotto";
}

<h2>Modifica Prodotto</h2>

<form asp-action="EditProduct" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryTimeInMinutes" class="control-label"></label>
        <input asp-for="DeliveryTimeInMinutes" class="form-control" />
        <span asp-validation-for="DeliveryTimeInMinutes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo" class="control-label"></label>
        <input asp-for="Photo" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>-- Seleziona ingredienti --</label>
        <select name="selectedIngredients" asp-items="ViewBag.Ingredients" multiple="multiple" class="form-control">
        </select>
    </div>
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-primary">Salva</button>
    <a asp-action="AllProducts" class="btn btn-secondary">Annulla</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


