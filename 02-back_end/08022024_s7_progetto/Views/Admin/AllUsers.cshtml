@model IEnumerable<_08022024_s7_progetto.DataModels.User>

@{
    ViewData["Title"] = "Lista utenti";
}

<div class="text-center">
    <h1 class="display-4">Lista utenti</h1>
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Aggiungi nuovo utente</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Username</th>
            <th>Email</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.UserID" class="btn btn-warning btn-sm">Modifica</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.UserID" class="btn btn-danger btn-sm">Elimina</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>Nessun utente presente</p>
        }

    </tbody>
</table>

