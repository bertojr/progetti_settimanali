@model _08022024_s7_progetto.DataModels.Ingredient

@{
    ViewData["Title"] = "Modifica Ingrediente";
}

<h2>Modifica Ingrediente</h2>

<form asp-action="EditIngredient" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="IngredientID" />
    <button type="submit" class="btn btn-primary">Salva</button>
    <a asp-action="AllIngredients" class="btn btn-secondary">Annulla</a>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


