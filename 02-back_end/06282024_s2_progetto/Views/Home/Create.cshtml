@model _06282024_s2_progetto.Models.Product

@{
    ViewData["Title"] = "Creazione prodotto";
}

<h1>Creaione prodotto</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number"/>
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoverImage" class="control-label"></label>
        <input asp-for="CoverImage" class="form-control" />
        <span asp-validation-for="CoverImage"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalImage1" class="control-label"></label>
        <input asp-for="AdditionalImage1" class="form-control" />
        <span asp-validation-for="AdditionalImage1"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalImage2" class="control-label"></label>
        <input asp-for="AdditionalImage2" class="form-control" />
        <span asp-validation-for="AdditionalImage2"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crea prodotto" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
