@model IEnumerable<_06282024_s2_progetto.Models.Product>
@{
    ViewData["Title"] = "Lista prodotti";
}

<h1>Lista prodotti</h1>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@product.CoverImage" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price €</p>
                    <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary">Dettagli</a>
                    <form asp-action="Delete" asp-controller="Home" method="post" class="mt-2">
                        <input type="hidden" name="id" value="@product.Id">
                        <button type="submit" class="btn btn-danger">Elimina prodotto</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

